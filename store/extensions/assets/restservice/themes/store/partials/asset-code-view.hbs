{{> asset-download .}}
<div class="table-responsive">
    <div class="col-lg-12">
        <div id='wadl-viewer'>
            {{#if dependencies.[0]}}
                <div class="col-lg-12 table table-striped table-hover divrow">
                    <div class="col-lg-2">
                        <b>
                            {{t "Raw Content :"}}
                        </b>
                    </div>
                </div>
            {{else}}
                {{#if wadlContent}}
                    <div class="col-lg-12 table table-striped table-hover divrow">
                        <div class="col-lg-2">
                            <b>
                                {{t "Raw Content :"}}
                            </b>
                        </div>
                    </div>
                {{else}}
                    {{#if swaggerContent}}
                        <div class="col-lg-12 table table-striped table-hover divrow">
                            <div class="col-lg-2">
                                <b>
                                    {{t "Raw Content :"}}
                                </b>
                            </div>
                        </div>
                    {{/if}}
                {{/if}}
            {{/if}}
            {{#if wadlContent}}
                <textarea id="wadlcontent" name="wadlcontent" style="width:100%">{{wadlContent}}</textarea>
            {{else}}
                {{#if swaggerContent}}
                    <textarea id="swaggercontent" name="swaggercontent" style="width:100%">{{swaggerContent}}</textarea>
                {{else}}
                    <div class="es-col-lg-12">
                        <h4>{{t "Content"}}</h4>
                        <hr>
                    </div>
                    <div class="col-lg-12 table table-striped table-hover divrow">
                        <div class="col-lg-4">
                            <b>
                                {{t "No Swagger or WADL content to display."}}
                            </b>
                        </div>
                    </div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>


